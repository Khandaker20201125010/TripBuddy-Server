datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
}

model User {
  id                    String     @id @default(uuid())
  name                  String
  email                 String     @unique
  password              String
  needPasswordChange    Boolean    @default(true)
  role                  Role       @default(USER)
  status                UserStatus @default(ACTIVE)
  bio                   String?
  profileImage          String?
  profileImageFileName  String?
  interests             String[]
  visitedCountries      String[]
  rating                Float      @default(0)
  premium               Boolean    @default(false)
  subscriptionExpiresAt DateTime?

  travelPlans     TravelPlan[]
  reviewsGiven    Review[]     @relation("Reviewer") // Reviews user wrote
  reviewsReceived Review[]     @relation("Reviewee") // Reviews user received
  payments        Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model TravelPlan {
  id          String   @id @default(uuid())
  userId      String
  image       String?
  destination String
  startDate   DateTime
  endDate     DateTime
  budget      Float
  travelType  String
  description String?
  visibility  Boolean  @default(true)

  user    User     @relation(fields: [userId], references: [id])
  reviews Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id           String  @id @default(uuid())
  reviewerId   String
  revieweeId   String
  travelPlanId String
  rating       Int
  content      String?

  reviewer   User       @relation("Reviewer", fields: [reviewerId], references: [id])
  reviewee   User       @relation("Reviewee", fields: [revieweeId], references: [id])
  travelPlan TravelPlan @relation(fields: [travelPlanId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id                    String    @id @default(uuid())
  userId                String
  amount                Float
  status                String
  subscriptionType      String
  transactionId         String   @unique
  premium               Boolean   @default(false)
  subscriptionExpiresAt DateTime?

  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model Admin {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  profilePhoto String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("admins")
}
