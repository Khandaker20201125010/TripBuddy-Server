// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---
enum Role {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
}

enum BuddyStatus {
  PENDING
  APPROVED
  REJECTED
}

enum NotificationType {
  TRIP_INVITE
  TRIP_JOIN_REQUEST
  TRIP_APPROVED
  TRIP_REJECTED
  LEAVE_REVIEW
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum SubscriptionType {
  EXPLORER
  MONTHLY
  YEARLY
}

enum ConnectionStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model User {
  id                    String            @id @default(uuid())
  name                  String
  email                 String            @unique
  password              String
  needPasswordChange    Boolean           @default(true)
  role                  Role              @default(USER)
  status                UserStatus        @default(ACTIVE)
  bio                   String?
  interests             String[]          @default([])
  visitedCountries      String[]          @default([])
  profileImage          String?
  profileImageFileName  String?
  rating                Float             @default(0)
  contactNumber         String?
  premium               Boolean           @default(false)
  subscriptionType      SubscriptionType?
  subscriptionExpiresAt DateTime?
  payments              Payment[]

  isSuperAdmin Boolean @default(false)

  travelPlans     TravelPlan[]
  joinedTrips     TravelBuddy[]
  notifications   Notification[]
  reviewsGiven    Review[]       @relation("Reviewer")
  reviewsReceived Review[]       @relation("Reviewee")

  sentConnections     Connection[] @relation("SentConnections")
  receivedConnections Connection[] @relation("ReceivedConnections")

  latitude          Float? 
  longitude         Float? 
  locationName      String? 
  city              String? 
  country           String? 
  timezone          String? 
  locationUpdatedAt DateTime?
  enableLiveLocation Boolean   @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Connection {
  id         String           @id @default(uuid())
  senderId   String
  receiverId String
  status     ConnectionStatus @default(PENDING)

  // Relations
  sender   User @relation("SentConnections", fields: [senderId], references: [id])
  receiver User @relation("ReceivedConnections", fields: [receiverId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([senderId, receiverId])
  @@map("connections")
}

// --- NEW MODEL ---
model Payment {
  id               String           @id @default(uuid())
  amount           Float
  transactionId    String           @unique
  status           PaymentStatus    @default(PENDING)
  subscriptionType SubscriptionType

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payments")
}

model TravelPlan {
  id          String   @id @default(uuid())
  userId      String
  image       String?
  destination String
  startDate   DateTime
  endDate     DateTime
  budget      Float
  travelType  String
  description String?
  visibility  Boolean  @default(true)

  user          User           @relation(fields: [userId], references: [id])
  buddies       TravelBuddy[]
  reviews       Review[]
  notifications Notification[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TravelBuddy {
  id           String      @id @default(uuid())
  travelPlanId String
  userId       String
  status       BuddyStatus @default(PENDING)

  travelPlan TravelPlan @relation(fields: [travelPlanId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([travelPlanId, userId])
}

model Notification {
  id           String           @id @default(uuid())
  userId       String
  travelPlanId String?
  message      String
  link         String?
  isRead       Boolean          @default(false)
  type         NotificationType

  user       User        @relation(fields: [userId], references: [id])
  travelPlan TravelPlan? @relation(fields: [travelPlanId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Review {
  id           String  @id @default(uuid())
  reviewerId   String
  revieweeId   String
  travelPlanId String
  rating       Int
  content      String?

  reviewer   User       @relation("Reviewer", fields: [reviewerId], references: [id])
  reviewee   User       @relation("Reviewee", fields: [revieweeId], references: [id])
  travelPlan TravelPlan @relation(fields: [travelPlanId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
